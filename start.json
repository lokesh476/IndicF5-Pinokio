{
  "daemon": true,
  "run": [
    {
      "method": "shell.run",
      "params": {
        "venv": "env",
        "env": {
          "XDG_DATA_HOME": "./cache/HF_HOME/hub",
          "ALLOW_FILE_UPLOAD": "True"
        },
        "message": [
          "echo 'Activating virtual environment...'",
          "source env/bin/activate",
          "python app.py"
        ],
        "on": [
          {
            "event": "/(http://[0-9.:]+)/",
            "done": true
          }
        ]
      }
    },
    {
      "method": "local.set",
      "params": {
        "url": "{{input.event[0]}}"
      }
    }
  ]
}
